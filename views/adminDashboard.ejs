<%- include('includes/header.ejs') %>
<div class="container">
  <div class="row">
    <div class="col">
      <p class="text-white mt-5 mb-5"><b>Admin Dashboard</b></p>
    </div>
  </div>
  <!-- row -->
  <div class="row tm-content-row">
    <div class="col-12 tm-block-col">
      <div class="tm-bg-primary-dark tm-block tm-block-taller tm-block-scroll">
        <div class="d-flex justify-content-between">
          <h2 class="tm-block-title">Registered Users</h2>
          <ul class="d-flex">
            <li
              class="mr-5"
              style="list-style: none">
              <a href="/admin-dashboard">Users</a>
            </li>
            <li style="list-style: none">
              <a href="/transactions">Transactions</a>
            </li>
          </ul>
        </div>
        <table class="table">
          <thead>
            <tr>
              <th scope="col">Full Name</th>
              <th scope="col">EMail</th>
              <th scope="col">Next of Kin</th>
              <th scope="col">Occupation</th>
              <th scope="col">Address</th>
              <th scope="col">Action</th>
            </tr>
          </thead>
          <tbody>
            <% if(members.length > 0 ) { %> <% members.forEach(member => { %>

            <tr>
              <td>
                <%= member.firstName %> <%= member.middleName %> <%=
                member.secondName %>
              </td>
              <td><%= member.email %></td>
              <td><%= member.nextOfKin %>00</td>

              <td><%= member.occupation %></td>
              <td><%= member.address %></td>

              <td>
                <form
                  action="/delete"
                  method="post">
                  <input
                    type="hidden"
                    value="<%= member._id %>"
                    name="memberId" />
                  <button
                    type="submit"
                    class="btn-danger">
                    Delete
                  </button>
                </form>
              </td>
            </tr>

            <% }) %> <% } else { %>
            <h3>No Registered member for Now</h3>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<%- include('includes/footer.ejs') %>
