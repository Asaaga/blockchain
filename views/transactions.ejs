<%- include('includes/header.ejs') %>
<div class="container">
  <div class="row">
    <div class="col">
      <p class="text-white mt-5 mb-5"><b>Admin Dashboard</b></p>
    </div>
  </div>
  <!-- row -->
  <div class="row tm-content-row">
    <div class="col-12 tm-block-col">
      <div class="tm-bg-primary-dark tm-block tm-block-taller tm-block-scroll">
        <div class="d-flex justify-content-between">
          <h2 class="tm-block-title">Transactions</h2>
          <ul class="d-flex">
            <li
              class="mr-5"
              style="list-style: none">
              <a href="/admin-dashboard">Users</a>
            </li>
            <li style="list-style: none">
              <a href="/transactions">Transactions</a>
            </li>
          </ul>
        </div>
        <table class="table">
          <thead>
            <tr>
              <th scope="col">Transaction ID</th>
              <th scope="col">Previous Hash</th>
              <th scope="col">Hash</th>
              <th scope="col">Transaction</th>
              <th scope="col">Time Stamp</th>
            </tr>
          </thead>
          <tbody>
            <% if(transactions.length > 0 ) { %> <%
            transactions.forEach(transaction => { %>

            <tr>
              <td><%= transaction._id %></td>

              <td><%= transaction.prevHash %></td>
              <td><%= transaction.hash %>00</td>

              <td>
                Sender: <%= transaction.transactions[0].sender %> To: <%=
                transaction.transactions[0].receipient %> Amount: <%=
                transaction.transactions[0].amount %>
              </td>

              <td><%= transaction.timestamp %></td>
            </tr>

            <% }) %> <% } else { %>
            <h3>No Registered transaction for Now</h3>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<%- include('includes/footer.ejs') %>
